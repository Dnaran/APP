<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/mainLeftImageView"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginRight="-5dp"/>

        <RelativeLayout
            android:id="@+id/sous"
            android:padding="0dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/title_bg"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/mainLeftImageView"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_EditText"
                android:background="@color/white"
                android:hint="输入景点名字"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_20" />

            <ImageButton
                android:background="@mipmap/sous"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@+id/search_EditText"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_40" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/mainRightImageView"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/sous"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-5dp" />

    </RelativeLayout>

</LinearLayout>